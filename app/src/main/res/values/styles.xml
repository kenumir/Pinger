<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="android:toolbarStyle" tools:targetApi="lollipop">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.ToolbarTextStyle</item>
        <item name="android:titleTextAppearance" tools:targetApi="lollipop">@style/AppTheme.ToolbarTextStyle</item>
    </style>

    <style name="AppTheme.ToolbarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="StartTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/app_start_logo</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Fab">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FabExt">
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Card">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">@dimen/card_item_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/card_item_horizontal_margin</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_marginLeft">@dimen/card_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/card_horizontal_margin</item>
    </style>

    <style name="Card_Header">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/activity_horizontal_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Settings_Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/activity_settings_item_padding</item>
        <item name="android:paddingRight">@dimen/activity_settings_item_padding</item>
        <item name="android:paddingTop">@dimen/activity_settings_item_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Settings_Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_settings_item_padding</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/default_click_bg</item>
    </style>

    <style name="Settings_Item_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Settings_Item_SubText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="PingActivityToolbar">
        <item name="collapsedTitleGravity">start</item>
        <item name="expandedTitleGravity">start|bottom</item>
    </style>

    <style name="CommandItem">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/monospace</item>
        <item name="fontFamily">@font/monospace</item>
    </style>

</resources>
